{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug NestJS",
        "type": "node",
        "request": "launch",
        "runtimeArgs": ["-r", "ts-node/register/transpile-only"],
        "args": ["${workspaceFolder}/src/main.ts"],
        "cwd": "${workspaceFolder}",
        "protocol": "inspector",
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }